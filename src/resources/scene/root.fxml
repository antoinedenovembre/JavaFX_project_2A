<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.defretiereduteyrat.tetris.RootFXController">
    <left>
        <AnchorPane fx:id="stack">
            <GridPane alignment="TOP_CENTER" fx:id="gameGridPane"/>
        </AnchorPane>
    </left>
   <center>
       <FlowPane fx:id="sidebar">
           <Text text="Next brick" fx:id="upcomingText"/>
           <GridPane alignment="TOP_CENTER" fx:id="upcomingGridPane"/>
           <Button fx:id="startButton" prefHeight="100" prefWidth="200" text="Start" textFill="cornflowerblue" BorderPane.alignment="CENTER" />
           <Text text="Score : " fx:id="scoreText"/>
           <Text text="Lines : " fx:id="lineText"/>
           <Text text="Meilleur score : " fx:id="bestScoreText"/>
       </FlowPane>
   </center>
</BorderPane>
